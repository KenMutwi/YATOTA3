<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Livestatus">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SHOP ONE DATA"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="37dp"
        android:text="Towels Issued"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/T.issued"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:hint="No. dropped"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:text="Towels Collected"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Tcollected"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/T.issued"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView3"
        android:ems="10"
        android:hint="No. Picked"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:text="Barber 1 Activity"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Barber1Amount"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tcollected"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:hint="Total Activities"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="40dp"
        android:text="Barber 2 Activity"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Barber2amount"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Barber1Amount"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:hint="Total Activities"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="Barber 3 Activity"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Barber3Amount"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:hint="Total Activites"
        android:inputType="number" />

    <Button
        android:id="@+id/data1"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDelete"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="13dp"
        android:text="save" />

    <Button
        android:id="@+id/view1"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/data1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/data1"
        android:text="view" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Delete Data" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:text="Row ID"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextid1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="118dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:hint="Enter row Number"
        android:inputType="number" />

</RelativeLayout>